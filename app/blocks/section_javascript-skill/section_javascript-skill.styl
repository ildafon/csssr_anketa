.section__slider
	position relative

	width 100%
	height 2.6em

	background url('/slider-area2.png') no-repeat 0 100%
	// sprite $slider_area2
	background-size 100%

	cursor pointer


.triangle
	display block
	width 2.1839%
	height .608em

	position absolute
	z-index 10
	top 22%

	// sprite $slider
	background url('/slider.png') no-repeat
	background-size contain

	cursor pointer



.slider__label
	position absolute
	top 100%

	&:last-child
		right 0
		// left auto
		// left auto !important


.slider__point
	position absolute
	top 1.35em
	width .8683em
	height .4775em

	// sprite $slider_point
	background url('/slider-point.png') no-repeat 0 100%
	background-size 100%


.slider__value
	position absolute
	z-index -1

